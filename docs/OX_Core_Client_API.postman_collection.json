{
    "info": {
        "name": "OX Core Client API",
        "description": "Collection for testing OX Core Client API endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "description": "Authentication related endpoints",
            "item": [
                {
                    "name": "Login - Success",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"clientId\": \"{{clientId}}\",\n    \"abi\": \"{{abi}}\",\n    \"password\": \"{{password}}\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "login"]
                        },
                        "description": "Login with valid credentials"
                    }
                },
                {
                    "name": "Login - Invalid Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"clientId\": \"{{clientId}}\",\n    \"abi\": \"{{abi}}\",\n    \"password\": \"{{invalidPassword}}\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "login"]
                        },
                        "description": "Test failed login attempt"
                    }
                },
                {
                    "name": "Unlock Account",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"clientId\": \"{{clientId}}\",\n    \"abi\": \"{{abi}}\",\n    \"password\": \"{{password}}\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/unlock",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "unlock"]
                        },
                        "description": "Unlock a locked account"
                    }
                }
            ]
        },
        {
            "name": "Password Management",
            "description": "Password management related endpoints",
            "item": [
                {
                    "name": "Change Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"clientId\": \"{{clientId}}\",\n    \"abi\": \"{{abi}}\",\n    \"currentPassword\": \"{{password}}\",\n    \"newPassword\": \"{{newPassword}}\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/password/change",
                            "host": ["{{baseUrl}}"],
                            "path": ["password", "change"]
                        },
                        "description": "Change client's password"
                    }
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "if (pm.response.code === 200 && pm.response.json().token) {",
                    "    pm.environment.set(\"token\", pm.response.json().token);",
                    "}"
                ]
            }
        }
    ]
}
